# ============================================================================
# Agent Zero Railway Deployment - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# For Railway deployment, set these in the Railway dashboard under Variables
# ============================================================================

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Port for the web server (Railway will set this automatically)
PORT=80

# Flask secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here

# ----------------------------------------------------------------------------
# A2A Server Configuration (FastA2A Protocol)
# ----------------------------------------------------------------------------
# Enable/disable A2A server endpoint
A2A_SERVER_ENABLED=true

# Authentication token for A2A endpoint (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# This token is used for both MCP and A2A authentication
# A2A endpoint will be available at: /a2a/t-{MCP_SERVER_TOKEN}/
MCP_SERVER_TOKEN=your-secure-token-here

# ----------------------------------------------------------------------------
# LLM Provider API Keys
# ----------------------------------------------------------------------------
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Google API Key (for Gemini models)
GOOGLE_API_KEY=...

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ----------------------------------------------------------------------------
# Chat Model Configuration (Primary LLM)
# ----------------------------------------------------------------------------
# Provider: openai, anthropic, google, azure, ollama, etc.
CHAT_MODEL_PROVIDER=openai

# Model name (e.g., gpt-4o, claude-3-5-sonnet-20241022, gemini-2.0-flash-exp)
CHAT_MODEL_NAME=gpt-4o

# API base URL (optional, for custom endpoints)
CHAT_MODEL_API_BASE=

# Context length (tokens)
CHAT_MODEL_CTX_LENGTH=128000

# Vision support (true/false)
CHAT_MODEL_VISION=true

# Rate limiting
CHAT_MODEL_RL_REQUESTS=100
CHAT_MODEL_RL_INPUT=100000
CHAT_MODEL_RL_OUTPUT=10000

# Additional model kwargs (JSON format)
CHAT_MODEL_KWARGS={"temperature": 0.7}

# ----------------------------------------------------------------------------
# Utility Model Configuration (Secondary LLM for simple tasks)
# ----------------------------------------------------------------------------
UTIL_MODEL_PROVIDER=openai
UTIL_MODEL_NAME=gpt-4o-mini
UTIL_MODEL_API_BASE=
UTIL_MODEL_CTX_LENGTH=128000
UTIL_MODEL_RL_REQUESTS=200
UTIL_MODEL_RL_INPUT=200000
UTIL_MODEL_RL_OUTPUT=20000
UTIL_MODEL_KWARGS={"temperature": 0.5}

# ----------------------------------------------------------------------------
# Embedding Model Configuration (for vector search)
# ----------------------------------------------------------------------------
EMBEDDING_MODEL_PROVIDER=openai
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_MODEL_API_BASE=
EMBEDDING_MODEL_CTX_LENGTH=8191
EMBEDDING_MODEL_RL_REQUESTS=1000
EMBEDDING_MODEL_RL_INPUT=1000000
EMBEDDING_MODEL_RL_OUTPUT=0
EMBEDDING_MODEL_KWARGS={}

# ----------------------------------------------------------------------------
# Memory Configuration
# ----------------------------------------------------------------------------
# Memory storage path (Railway will persist this with volumes)
MEMORY_PATH=/app/memory

# Memory subsets (comma-separated)
MEMORY_SUBSETS=main,fragments

# ----------------------------------------------------------------------------
# Additional Service API Keys (Optional)
# ----------------------------------------------------------------------------
# Perplexity API Key (for web search)
PERPLEXITY_API_KEY=pplx-...

# Tavily API Key (for web search)
TAVILY_API_KEY=tvly-...

# ElevenLabs API Key (for text-to-speech)
ELEVENLABS_API_KEY=...

# ----------------------------------------------------------------------------
# MCP Server Configuration (Model Context Protocol)
# ----------------------------------------------------------------------------
# Enable/disable MCP server
MCP_SERVER_ENABLED=true

# MCP server host (0.0.0.0 for Railway)
MCP_SERVER_HOST=0.0.0.0

# MCP server port (Railway will override with PORT)
MCP_SERVER_PORT=80

# ----------------------------------------------------------------------------
# Browser Configuration
# ----------------------------------------------------------------------------
# Playwright browser type (chromium, firefox, webkit)
BROWSER_TYPE=chromium

# Headless mode (true/false)
BROWSER_HEADLESS=true

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log path
LOG_PATH=/app/logs

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
# Enable basic authentication for web UI (true/false)
BASIC_AUTH_ENABLED=false

# Basic auth username
BASIC_AUTH_USERNAME=admin

# Basic auth password
BASIC_AUTH_PASSWORD=changeme

# ----------------------------------------------------------------------------
# Railway-Specific Configuration
# ----------------------------------------------------------------------------
# Railway automatically sets these - DO NOT override:
# - PORT (Railway assigns the port)
# - RAILWAY_ENVIRONMENT (production, staging, etc.)
# - RAILWAY_SERVICE_NAME (your service name)
# - RAILWAY_PROJECT_NAME (your project name)

# ----------------------------------------------------------------------------
# Python Configuration
# ----------------------------------------------------------------------------
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
TZ=UTC
TOKENIZERS_PARALLELISM=false
